<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.daniel.sunshine"
  >

  <!-- User Permissions -->
  <!-- This permission is necessary in order for Sunshine to perform network access -->
  <uses-permission android:name="android.permission.INTERNET" />

  <!-- Application Configuration -->
  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme"

    android:name="com.activeandroid.app.Application"
    >

    <!-- MainActivity -->
    <activity
      android:name=".MainActivity_"
      android:label="@string/app_name"
      >
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN"
          />
        <category
          android:name="android.intent.category.LAUNCHER"
          />

      </intent-filter>
    </activity>

    <!-- DetailActivity -->
    <activity
      android:name=".DetailActivity_"
      android:label="@string/title_activity_detail"
      android:parentActivityName=".MainActivity"
      >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.daniel.sunshine.MainActivity"
        />
    </activity>

    <!-- SettingActivity -->
    <activity
      android:name=".SettingsActivity_"
      android:label="@string/title_activity_settings"
      android:parentActivityName=".MainActivity"
      >

      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".MainActivity"
        />
    </activity>

    <!-- OpenWeatherMap Provider -->
    <!--<provider-->
      <!--android:authorities="com.daniel.sunshine"-->
      <!--android:name=".data.WeatherProvider"-->
      <!--android:exported="false"-->
      <!--/>-->
    <provider
      android:authorities="com.daniel.sunshine"
      android:name="com.activeandroid.content.ContentProvider"
      android:exported="false"
      />

    <!-- SunshineService -->
    <service
      android:name=".service.SunshineService_"
      />

    <!-- ActiveAndroid Configurations -->
    <meta-data
      android:name="AA_DB_NAME"
      android:value="sunshine.db" />
    <meta-data
      android:name="AA_DB_VERSION"
      android:value="1" />
    <meta-data
      android:name="AA_MODELS"
      android:value="com.daniel.sunshine.persistence.Location, com.daniel.sunshine.persistence.Weather"
      />


  </application>
</manifest>
